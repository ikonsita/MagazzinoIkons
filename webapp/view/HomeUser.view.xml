<mvc:View controllerName="com.sap.magazzinoikons.controller.HomeUser"
    xmlns:mvc="sap.ui.core.mvc" displayBlock="true"
    xmlns="sap.m"
    xmlns:f="sap.f"
    xmlns:l="sap.ui.layout"
    xmlns:core="sap.ui.core"
    >

    <App>
        <pages>
            <Page>
                <Toolbar>
                    <Title text="Gestionale"/>
                    <ToolbarSpacer/>
			    </Toolbar>
                <content>
                    <Panel id="Gestionale">
                        <FlexBox height="78vh" alignItems="Center" justifyContent="Center">
                            <GenericTile header="Gestione Ordini" press=".onOrdini">
                                <TileContent footer="Click me" />
                            </GenericTile>
                        </FlexBox>
                    </Panel>
                </content>
            </Page>
        </pages>
    </App>
</mvc:View>