<mvc:View controllerName="com.sap.magazzinoikons.controller.Home"
    xmlns:mvc="sap.ui.core.mvc" displayBlock="true"
    xmlns="sap.m"
    xmlns:f="sap.f"
    xmlns:l="sap.ui.layout"
    xmlns:core="sap.ui.core"
    >

    <App>
        <pages>
            <Page>
                <Toolbar>
                    <Title text="Gestionale"/>
                    <ToolbarSpacer/>
                    <Button text="{i18n>Login}" icon="sap-icon://visits" type="Emphasized" press="onLog"/>
                    <Button text="{i18n>Registrati}" press="onNewReg" type="Emphasized" icon="sap-icon://add-employee"/>
			    </Toolbar>
                <content>
                    <Panel id="Gestionale">
                        <FlexBox height="78vh" alignItems="Center" justifyContent="Center">
                            <GenericTile header="Gestione Merci" class="sapUiMediumMarginBeginEnd" press=".onMerci">
                                <TileContent footer="Click me"/>
                            </GenericTile>
                            <GenericTile header="Gestione Magazzino" press=".onMagazzino">
                                <TileContent footer="Click me" />
                            </GenericTile>
                        </FlexBox>
                    </Panel>
                </content>
            </Page>
        </pages>
    </App>
</mvc:View>