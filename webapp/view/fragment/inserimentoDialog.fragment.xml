<core:FragmentDefinition xmlns="sap.m" xmlns:l="sap.ui.layout" xmlns:f="sap.ui.layout.form" xmlns:core="sap.ui.core"
	xmlns:u="sap.ui.unified">
	<Dialog id="NewInvoice" title="Nuova Merce">
		<Wizard id="NewInvoiceWizard" class="sapUiResponsivePadding--header sapUiResponsivePadding--content" complete="wizardCompletedHandler">
			<WizardStep id="GeneralInfoStep" title="Informazioni Generali" validated="true">
				<f:SimpleForm editable="true" layout="ColumnLayout">
					<f:content>
						<Label for="DescMag" text="Nome Merce"/>
						<Input id="DescMag" value="{NewInvoiceModel>/DescMag}" required="true"/>

						<Label for="Categoria" text="Categoria"/>
						<Input id="Categoria" value="{NewInvoiceModel>/CategMercMag}" required="true"/>

						<Label for="Quantita" text="Quantita disponibile"/>
						<Input id="Quantita" value="{NewInvoiceModel>/QuantdispMercMag}" required="true"/>
					</f:content>
				</f:SimpleForm>
			</WizardStep>
			<WizardStep id="MaterialStep" title="Info Merce" validated="true">
				<f:SimpleForm editable="true" layout="ColumnLayout">
					<f:content>
						<Label for="Disponibilita" text="Disponibilita Merce"/>
						<Input id="Disponibilita" value="{NewInvoiceModel>/DispMercMag}" required="true"/>

						<Label for="Peso" text="Peso Merce"/>
						<Input id="Peso" value="{NewInvoiceModel>/PesoMercMag}" required="true"/>

                        <Label for="Dimensioni" text="Dimensioni Merce"/>
						<Input id="Dimensioni" value="{NewInvoiceModel>/DimMercMag}" required="true"/>

                        <Label for="Note" text="Note Merce"/>
						<TextArea id="Note" value="{NewInvoiceModel>/NoteMercMag}" required="true"/>
					</f:content>
				</f:SimpleForm>
			</WizardStep>
			<WizardStep id="PriceData" title="Info Prezzo" validated="false">
				<f:SimpleForm editable="true" layout="ColumnLayout">
					<f:content>
						<Label for="Prezzo" text="Prezzo"/>
						<Input id="Prezzo" value="{NewInvoiceModel>/PrezzoldMercMag}" required="true"/>

						<Label for="iva" text="Iva"/>
						<ComboBox selectedKey="{NewInvoiceModel>/IvaMercMag}" required="true" items="{ path: 'IVAModel>/' }">
							<core:Item key="{IVAModel>}" text="{IVAModel>}"/>
						</ComboBox>

						<Label for="Valuta" text="Valuta"/>
						<Input id="Valuta" value="{NewInvoiceModel>/ValMercMag}" required="true"/>
					</f:content>
				</f:SimpleForm>
			</WizardStep>
		</Wizard>
		<footer>
			<OverflowToolbar class="noBorderBottom">
				<ToolbarSpacer/>
				<Button text="{i18n>save}" press="onSaveNewInvoice" type="Accept" icon="sap-icon://save"/>
				<Button text="{i18n>close}" press="onCloseNewInvoiceDialog" type="Reject" icon="sap-icon://decline"/>
			</OverflowToolbar>
		</footer>
	</Dialog>
</core:FragmentDefinition>