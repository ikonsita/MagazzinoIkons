<core:FragmentDefinition xmlns="sap.m" xmlns:l="sap.ui.layout" xmlns:f="sap.ui.layout.form" xmlns:core="sap.ui.core"
	xmlns:u="sap.ui.unified">
	<Dialog id="NewRegi" title="Accesso">
		<Wizard id="Accesso" class="sapUiResponsivePadding--header sapUiResponsivePadding--content" complete="wizardCompletedHandler">
			<WizardStep id="Reg" title="Login">
				<f:SimpleForm editable="true" layout="ColumnLayout">
					<f:content>
                        <Label for="Email" text="Email"/>
                        <Input id="inputEmail" type="Email" placeholder="Inserisci email" value="{LoginModel>/Mail}" required="true"/>

                        <Label for="Password" text="Password"/>
                        <Input id="inputPassword" value="{LoginModel>/Password}" placeholder="Inserisci password" required="true"/>

                        <Label for="Ruolo" text="Ruolo"/>
                        <ComboBox selectedKey="{LoginModel>/Ruolo}" id="Ruolo" required="true" items="{ path: 'RoleModel>/Ruolo' }">
                            <items>
                                <core:Item key="{RoleModel>}" text="{RoleModel>}"/>
                            </items>
                        </ComboBox>
					</f:content>
				</f:SimpleForm>
			</WizardStep>
		</Wizard>
		<footer>
            <OverflowToolbar class="noBorderBottom">
                <ToolbarSpacer/>
                <Button text="{i18n>Login}" press="onhandleLogin" type="Accept" icon="sap-icon://save"/>
            </OverflowToolbar>
        </footer>
	</Dialog>
</core:FragmentDefinition>